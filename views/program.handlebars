<div class="container">

  <h1 class="text-center page-header">Programs</h1>

  <form id="insert-form" class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-1 control-label">Name</label>
      <div class="col-sm-3">
        <input class="form-control" type="text" name="name" required>
      </div>
      <span role="alert" id="error"></span>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Country</label>
      <div class="col-sm-3">
        <input class="form-control" type="text" name="country">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Start Year</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" name="startYear">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">End Year</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" name="endYear">
      </div>
    </div>
    <div class="col-sm-offset-1">
      <button type="submit" id="insert" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span> Submit</button>
    </div>
  </form>

  <div class="pull-right">
    <form class="form-inline" action="/filter-program">
      <div class="form-group">
        <label class="control-label">Country</label>
        <select class="form-control" name="country" id="filter">
         <option></option>
          {{#each country}}
            <option value="{{this.country}}">{{this.country}}</option>
          {{/each}}
        </select>
      </div>
      <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-filter"></span> Filter</button>
    </form>
  </div>

  <br><br>

  <table id="table" class="table table-striped table-condensed table-hover">
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Start Year</th>
      <th>End Year</th>
      <th>Edit</th>
    </tr>

    {{#each results}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.country}}</td>
      <td>{{this.startYear}}</td>
      <td>{{this.endYear}}</td>

      <td><button onclick="deleteRow('table', this, {{this.id}})" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-remove"></span> Delete</td>
    </tr>
    {{/each}}
  </table>

</div>

