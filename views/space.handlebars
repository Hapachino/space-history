<div class="container">

  <h1 class="text-center page-header">Space</h1>

  <form id="insert-form" class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-1 control-label">Name</label>
      <div class="col-sm-3">
        <input class="form-control" type="text" name="name" required>
      </div>
      <span role="alert" id="error"></span>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Classification</label>
      <div class="col-sm-3">
        <input class="form-control" type="text" name="classification">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Diameter</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" name="diameter">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Mass</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" step="0.01" name="mass">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">AU</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" name="au">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Moons</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" name="moons">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Orbits</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" name="orbits">
      </div>
    </div>
    <div class="col-sm-offset-1">
      <button type="submit" id="insert" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span> Submit</button>
    </div>
  </form>

  <div class="pull-right">
    <form class="form-inline" action="/filter-space">
      <div class="form-group">
        <label class="control-label">Classification</label>
        <select class="form-control" name="classification" id="filter">
         <option></option>
          {{#each classification}}
            <option value="{{this.classification}}">{{this.classification}}</option>
          {{/each}}
        </select>
      </div>
      <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-filter"></span> Filter</button>
    </form>
  </div>

  <br><br>

  <table id="table" class="table table-striped table-condensed table-hover">
    <tr>
      <th>Name</th>
      <th>Classification</th>
      <th>Diameter (km)</th>
      <th>Mass (10<sup>24</sup>kg)</th>
      <th>AU</th>
      <th>Moons</th>
      <th>Orbits</th>
      <th>Edit</th>
    </tr>

    {{#each results}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.classification}}</td>
      <td>{{this.diameter}}</td>
      <td>{{this.mass}}</td>
      <td>{{this.au}}</td>
      <td>{{this.moons}}</td>
      <td>{{this.orbiting}}</td>
      
      <td><button onclick="deleteRow('table', this, {{this.id}})" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-remove"></span> Delete</td>
    </tr>
    {{/each}}
  </table>

</div>

