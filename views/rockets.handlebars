<div class="container">

  <h1 class="text-center page-header">Rockets</h1>

  <form id="insert-form" class="form-horizontal">
    <div class="form-group">
      <label class="col-sm-1 control-label">Model</label>
      <div class="col-sm-3">
        <input class="form-control" type="text" name="model" required>
      </div>
      <span role="alert" id="error"></span>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Height</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" step="0.01" name="height">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Stages</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" name="stages">  
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Thrust</label>
      <div class="col-sm-3">
        <input class="form-control" type="number" name="thrust">
      </div>
    </div>
    <div class="col-sm-offset-1">
      <button type="submit" id="insert" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span> Submit</button>
    </div>
  </form>

