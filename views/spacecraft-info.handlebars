<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <ul class="nav navbar-nav">
      <li><a href="/">Spacecraft</a></li>
      <li><a href="/rocket">Rockets</a></li>
      <li><a href="/program">Programs</a></li>
      <li><a href="/space">Space</a></li>
    </ul>
  </div>
</nav>

<div class="container">

  <h1 class="text-center page-header">{{results.name}}</h1>

  <form class="form-horizontal" action="/update-complete">
    <div class="form-group">
      <label class="col-sm-1 control-label">Name</label>
      <div class="col-sm-3">
        <input class="form-control" type="text" name="name" value="{{results.name}}">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Classification</label>
      <div class="col-sm-3">
        <input class="form-control" type="text" name="classification" value="{{results.classification}}">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Program</label>
      <div class="col-sm-3">
        <select class="form-control" name="pid">
                    <option value="{{results.pid}}">{{results.program}}</option>

                    {{#each program}}
                        <option value="{{this.id}}">{{this.name}}</option>                        
                    {{/each}}
                </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">Start Date</label>
      <div class="col-sm-3">
        <input class="form-control" type="date" name="startDate" value="{{results.startDate}}">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label">End Date</label>
      <div class="col-sm-3">
        <input class="form-control" type="date" name="endDate" value="{{results.endDate}}">
        <input type="hidden" name="id" value="{{results.id}}">
      </div>
    </div>
    <div class="col-sm-offset-1">
      <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span> Update</button>
    </div>
  </form>

  <br><br>

  <table class="table table-striped table-condensed table-hover">
    <caption>Program</caption>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Start Year</th>
      <th>End Year</th>
    </tr>

    {{#each pid}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.country}}</td>
      <td>{{this.startYear}}</td>
      <td>{{this.endYear}}</td>
    </tr>
    {{/each}}
  </table>

<br>

<table id="table" class="table table-striped table-condensed table-hover">
  <caption>Launch Rockets</caption>
    <tr>
      <th>Model</th>
      <th>Height (m)</th>
      <th>Stages</th>
      <th>Thrust (kN)</th>
      <th>Edit</th>
    </tr>

    {{#each rocket}}
    <tr>
      <td>{{this.model}}</td>
      <td>{{this.height}}</td>
      <td>{{this.stages}}</td>
      <td>{{this.thrust}}</td>

      <td><button onclick="deleteRow('table', this, {{this.id}})" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-remove"></span> Delete</td>
    </tr>
    {{/each}}
</table>

<br>

  <table class="table table-striped table-condensed table-hover">
    <caption>Planets Explored</caption>
    <tr>
      <th>Name</th>
      <th>Classification</th>
      <th>Diameter (km)</th>
      <th>Mass (10<sup>24</sup>kg)</th>
      <th>AU</th>
      <th>Moons</th>
      <th>Orbits</th>
    </tr>

    {{#each space}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.classification}}</td>
      <td>{{this.diameter}}</td>
      <td>{{this.mass}}</td>
      <td>{{this.au}}</td>
      <td>{{this.moons}}</td>
      <td>{{this.orbiting}}</td>
    </tr>
    {{/each}}
  </table>


</div>

 <script src="js/spacecraft-info.js"></script>